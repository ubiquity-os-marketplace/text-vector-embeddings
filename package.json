{
  "name": "@ubiquity-os/text-vector-embeddings",
  "version": "1.0.0",
  "description": "Generates vector embeddings of GitHub comments and stores them in Supabase.",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "main": "src/main.ts",
  "type": "module",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "format": "run-p format:*",
    "format:lint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format:cspell": "cspell **/*",
    "knip": "knip --config .github/knip.ts",
    "knip-ci": "knip --no-exit-code --reporter json --config .github/knip.ts",
    "prepare": "husky install",
    "test": "bun test",
    "worker": "wrangler dev --env dev --port 4004",
    "dev": " deno serve --port 4004 --unstable-sloppy-imports --allow-all --unstable-kv --watch src/worker.ts",
    "supabase:generate:local": "supabase gen types typescript --local > src/types/database.ts",
    "supabase:generate:remote": "cross-env-shell \"supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > src/types/database.ts\""
  },
  "keywords": [
    "typescript",
    "template",
    "dao",
    "ubiquity",
    "open-source"
  ],
  "dependencies": {
    "@octokit/auth-app": "^8.0.2",
    "@octokit/openapi-types": "^23.0.1",
    "@octokit/plugin-rest-endpoint-methods": "^13.2.6",
    "@sinclair/typebox": "0.34.3",
    "@supabase/supabase-js": "^2.45.2",
    "@types/markdown-it": "^14.1.2",
    "@ubiquity-os/plugin-sdk": "3.2.2",
    "@ubiquity-os/ubiquity-os-logger": "^1.3.2",
    "dotenv": "16.4.5",
    "hono": "^4.6.4",
    "markdown-it": "^14.1.0",
    "markdown-it-plain-text": "^0.3.0",
    "voyageai": "^0.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@cspell/dict-node": "5.0.1",
    "@cspell/dict-software-terms": "3.4.6",
    "@cspell/dict-typescript": "3.1.5",
    "@eslint/js": "9.5.0",
    "@mswjs/data": "0.16.1",
    "@types/bun": "^1.2.19",
    "@types/deno": "^2.3.0",
    "@types/node": "20.14.5",
    "cross-env": "7.0.3",
    "cspell": "8.9.0",
    "eslint": "9.5.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-check-file": "2.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-sonarjs": "1.0.3",
    "fast-xml-parser": "^5.2.5",
    "husky": "9.0.11",
    "knip": "5.21.2",
    "lint-staged": "15.2.7",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.2",
    "supabase": "1.219.2",
    "ts-node": "^10.9.2",
    "typescript": "5.6.2",
    "typescript-eslint": "8.15.0",
    "wrangler": "3.89.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**.{ts,json}": [
      "cspell"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
